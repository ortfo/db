{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/ortfo/db/v1.5.0/schemas/configuration.schema.json",
  "$ref": "#/$defs/Configuration",
  "$defs": {
    "Configuration": {
      "properties": {
        "extract colors": {
          "$ref": "#/$defs/ExtractColorsConfiguration"
        },
        "make gifs": {
          "$ref": "#/$defs/MakeGIFsConfiguration"
        },
        "make thumbnails": {
          "$ref": "#/$defs/MakeThumbnailsConfiguration"
        },
        "build metadata file": {
          "type": "string"
        },
        "media": {
          "$ref": "#/$defs/MediaConfiguration"
        },
        "scattered mode folder": {
          "type": "string"
        },
        "tags": {
          "$ref": "#/$defs/TagsConfiguration"
        },
        "technologies": {
          "$ref": "#/$defs/TechnologiesConfiguration"
        },
        "projects at": {
          "type": "string",
          "description": "Path to the directory containing all projects. Must be absolute."
        },
        "exporters": {
          "additionalProperties": {
            "type": "object"
          },
          "type": "object",
          "description": "Exporter-specific configuration. Maps exporter names to their configuration."
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "scattered mode folder",
        "projects at"
      ],
      "description": "Configuration represents what the ortfodb.yaml configuration file describes.",
      "title": "Configuration"
    },
    "ExtractColorsConfiguration": {
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "extract": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "default files": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "enabled",
        "extract",
        "default files"
      ],
      "title": "ExtractColorsConfiguration"
    },
    "MakeGIFsConfiguration": {
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "file name template": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "enabled",
        "file name template"
      ],
      "title": "MakeGIFsConfiguration"
    },
    "MakeThumbnailsConfiguration": {
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "sizes": {
          "items": {
            "type": "integer"
          },
          "type": "array"
        },
        "input file": {
          "type": "string"
        },
        "file name template": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "enabled",
        "sizes",
        "input file",
        "file name template"
      ],
      "title": "MakeThumbnailsConfiguration"
    },
    "MediaConfiguration": {
      "properties": {
        "at": {
          "type": "string",
          "description": "Path to the media directory."
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "at"
      ],
      "title": "MediaConfiguration"
    },
    "TagsConfiguration": {
      "properties": {
        "repository": {
          "type": "string",
          "description": "Path to file describing all tags."
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "repository"
      ],
      "title": "TagsConfiguration"
    },
    "TechnologiesConfiguration": {
      "properties": {
        "repository": {
          "type": "string",
          "description": "Path to file describing all technologies."
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "repository"
      ],
      "title": "TechnologiesConfiguration"
    }
  }
}
